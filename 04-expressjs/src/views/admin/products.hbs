
<h2>Products</h2>
{{#if noProducts}}
    <p>No products ...</p>
    {{else}}
    <ul>
        {{#each products}}
            <li>
                <form method="POST" action="/admin/delete-product/{{id}}">
                    {{ name }} <button type="submit">Delete</button>
                </form>
            </li>
        {{/each}}
    </ul>
{{/if}}